  <p>------------------------------------------------------</p>
    <table style="width:100%">
    <tr>
      <th v-on:click="setSortAttribute('title')">Title:</th>
      <th v-on:click="setSortAttribute('author')">Author:</th>
      <th v-on:click="setSortAttribute('image')">Image Url:</th>
      <th v-on:click="setSortAttribute('date')">Date:</th>
      <th v-on:click="setSortAttribute('description')">Description:</th>
    </tr>
    <tbody name="fade" is="transition-group">
      <tr v-for="article in filteredArticle" v-bind:key="article.id">
          <td>{{ article.title }}</td>
          <td>{{ article.author }}</td>
          <td>{{ article.image }}</td>
          <td>{{ article.date }}</td>
          <td>{{ article.description }}</td>
      </tr>
    </transition-group>
